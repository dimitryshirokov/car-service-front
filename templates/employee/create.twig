{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_content %}
    {% if employeeId is not null %}
        <h4>Создан работник с ID {{ employeeId }}</h4>
    {% endif %}

    <div class="row">
        <div class="col-sm-5">
        {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
            {% block box_title %}Данные работника{% endblock %}
            {% block box_body %}
                {{ form | raw }}
            {% endblock %}
        {% endembed %}
        </div>
    </div>
{% endblock %}